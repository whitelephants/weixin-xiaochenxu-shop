.swiper-tab{
  width: 100%;
  text-align: center;
  line-height: 31px;
  height: 33px;
}
.swiper-tab-list{
  display: inline-block;
  width: 25%;
  color: gray;
  border-bottom:3px solid gray;
}
.on{
  color: tomato;
  border-bottom:3px solid tomato;
}
.swiper-box{
  width:100%;
  height: 100%;
  display: block;
  overflow: scroll;
}

.cps{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 3px;
}
.cp-danhao{
  background-color: #f2f2f2;
  font-size: 12px;
  color: gray;
  height: 30px;
  line-height: 30px;
}
.cp{
  display: flex;
  padding: 5px;
  border-bottom: 1px solid gainsboro;
}
.cp-tupian{
  width: 20%;
}
.cp-img{
  width: 100%;
}
.cp-xinxi{
  width: 65%;
  margin-left: 5px;
  display: flex;
  flex-direction: column;
  flex: 1;
}
.cp-mingcheng{
  font-size: 14px;
  width: 95%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.cp-xiaoshou{
  font-size: 12px;
  color: gray;
  padding: 3px 0;
}
.cp-jiage{
  font-size: 13px;
  color: red
}
.cp-shuliang{
  width: 15%;
  display: flex;
  align-items: center;
}
.cp-jiesuan{
font-size: 13px;
color: gray;
height: 30px;
line-height: 30px;
border-bottom: 1px solid gainsboro
}
.cp-caozuo{
  height:40px;
  display: flex;
  align-items: center;
  justify-content: center; 
}
