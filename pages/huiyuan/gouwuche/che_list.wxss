.gwc{
  display :flex;
  flex-direction: column;
}
.sp{
  display:flex;
  padding: 5px;
  border-bottom: 1px dotted gainsboro; 
}
.sp-tupian{
  width: 20%;
}
.sp-img{
  width: 100%;
  border: 2px solid #f2f2f2;
  border-radius: 5px;
  box-shadow: 1px 2px 2px gainsboro;
}
.sp-info{
  width: 60%;
  padding-left: 7px;
  display: flex;
  flex-direction: column;
}
.sp-mc{
  font-size: 14px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.sp-xiaoshou{
  font-size: 12px;
  color: gray;
  padding: 5px 0;
}
.sp-jiage{
  font-size: 13px;
  color: red;
}
.sp-shuliang{
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sp-jian{
  width: 20px;
  height: 20px;
  border-radius: 50%;
  border:1px solid gray;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
}
.sp-shu{
  width: 1em;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sp-jia{
  width: 20px;
  height: 20px;
  border-radius: 50%;
  border:1px solid gray;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  background-color: red;
  color: white;
}
.dibu {
  position: absolute;
  bottom: 0;
  background-color: #f2f2f2;
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
  height: 40px
}

.feiyong {
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
}
.feiyong-tupian {
  position: absolute;
  top: -30px;
  left: 10px;
  background-color: antiquewhite;
  padding: 5px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px dotted gainsboro;
}

.feiyong-img {
  width: 30px;
  height: 30px;
}

.feiyong-shu {
  color: red;
}
.caozuo {
  background-color: orangered;
  color: white;
  height: 40px;
  display: flex;
  justify-content: center;
  line-height: 40px;
}
